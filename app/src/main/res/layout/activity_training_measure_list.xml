<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.app.calendar.ui.measure.list.MeasureListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/date_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/training_measure_list"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/date_text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textColor="@color/color_label"
                android:textSize="@dimen/size_top_label_sp"
                android:text="2022年2月12日(土)" />
        </FrameLayout>

        <TextView
            android:id="@+id/is_empty_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/training_measure_list"
            android:visibility="invisible"
            android:gravity="center"
            android:textSize="@dimen/size_input_sp"
            app:isExist="@{vm.measureList.size() == 0}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/training_measure_list"
            app:layout_constraintTop_toBottomOf="@id/date_field"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:minHeight="300dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="戻る" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fab_root"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fab_group"
                app:cardBackgroundColor="@color/purple_200"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/floating_action_button"
                app:isExist="@{vm.fabOpened}"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/body_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="体形を記録" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/exercise_btn"
                    app:layout_constraintTop_toBottomOf="@id/body_btn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="運動を記録" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/food_btn"
                    app:layout_constraintTop_toBottomOf="@id/exercise_btn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="食事を記録" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- Floating Action Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_action_button"
                app:srcCompat="@drawable/ic_baseline_add_24"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="@{() -> vm.updateFabVisibility()}"
                android:layout_margin="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>